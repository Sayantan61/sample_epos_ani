<section class="list1 band reversed">
    <header>
        <div class="container">
            <h1>Products</h1>
        </div>
    </header>
    <div class="content">
        <div class="container">
            <section>
                <div class="list">
                    <dl>
                        <dt><h3>Accelerate</h3></dt>
                        <dt><a href="../technologies/jboss-middleware/application-platform">Red Hat JBoss Enterprise Application Platform</a>
                        </dt>
                        <dt><a href="../technologies/jboss-middleware/web-server">Red Hat JBoss Web Server</a>
